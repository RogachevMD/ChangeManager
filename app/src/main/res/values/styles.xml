<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/colorButtonNormal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="TitleStyle">
        <item name="android:textColor">@color/color_title</item>
        <item name="android:textSize">@dimen/size_title</item>
        <item name="android:fontFamily">@font/work_sans</item>
    </style>

    <style name="BodyStyle">
        <item name="android:textColor">@color/color_body</item>
        <item name="android:textSize">@dimen/size_body</item>
        <item name="android:fontFamily">@font/work_sans</item>
    </style>

    <style name="MetadataStyle">
        <item name="android:textColor">@color/color_metadata</item>
        <item name="android:textSize">@dimen/size_metadata</item>
        <item name="android:fontFamily">@font/work_sans</item>
    </style>

    <style name="BodyStyleEdittext" parent="BodyStyle">
        <item name="android:textColor">@color/colorButtonNormal</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>
</resources>
